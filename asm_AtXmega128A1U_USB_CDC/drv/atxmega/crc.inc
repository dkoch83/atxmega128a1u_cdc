.SET CRC_BASE = 0x00D0

.MACRO CRC_RESET0
	PUSH R16
		LDS R16, CRC_BASE
		CBR R16, 0b11000000
		SBR R16, 0b10000000
		STS CRC_BASE, R16
	POP R16
.ENDMACRO

.MACRO CRC_RESET1
	PUSH R16
		LDS R16, CRC_BASE
		SBR R16, 0b11000000
		STS CRC_BASE, R16
	POP R16
.ENDMACRO

.MACRO CRC_CRC32
	PUSH R16
		LDS R16, CRC_BASE
		SBR R16, (1<<5)
		STS CRC_BASE, R16
	POP R16
.ENDMACRO

.MACRO CRC_CRC16
	PUSH R16
		LDS R16, CRC_BASE
		CBR R16, (1<<5)
		STS CRC_BASE, R16
	POP R16
.ENDMACRO

